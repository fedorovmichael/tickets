extends layout

block content  
  script.
      $(function(){ 
          $("#txtDateFrom").datepicker({minDate: new Date(), dateFormat: 'dd/mm/yy'}); 
          $("#txtDateTo").datepicker({minDate: new Date(), dateFormat: 'dd/mm/yy'}); 
          //-$("#divMultiDatePicker").multiDatesPicker();      
          $('#editShowModal').modal({backdrop: 'static', keyboard: false, show: false });                    
        }); 

  div(id="divIndexContainer" class="container text-center")
    div(id='divBanerContainer' class='text-center')
      a(href='http://kinorai.co.il' target='_blank')
        img(src="/images/baners/kinoraj.gif", alt="Кинорай" style="width: 90%; max-height: 250px;")
    <!--carousel-->  
    div(id="divMainShowContainer" class="container" style="margin-bottom: 150px; margin-top: 40px;")
      div(id="ticketsCarousel", class="carousel slide", data-ride="carousel", style="margin-bottom: 10px; display:none;")
        <!-- Indicators-->
        ol(class="carousel-indicators")
          li(data-target="#ticketsCarousel", data-slide-to="0" class="active")
          li(data-target="#ticketsCarousel", data-slide-to="1")
          li(data-target="#ticketsCarousel", data-slide-to="2")
          li(data-target="#ticketsCarousel", data-slide-to="3")

        <!-- slides -->
        div(class="carousel-inner", role="listbox")
          div(class="item active")
            img(src="", alt="Chania", width="460", height="345")
            div(class="carousel-caption")
              h3 slide 1
              p The atmosphere in Chania has a touch of Florence and Venice

          div(class="item")
            img(src="", alt="Chania", width="460", height="345")
            div(class="carousel-caption")
              h3 slide 2
              p The atmosphere in Chania has a touch of Florence and Venice

          div(class="item")
            img(src="", alt="Chania", width="460", height="345")
            div(class="carousel-caption")
              h3 slide 3
              p The atmosphere in Chania has a touch of Florence and Venice

          div(class="item")
            img(src="", alt="Chania", width="460", height="345")
            div(class="carousel-caption")
              h3 slide 3
              p The atmosphere in Chania has a touch of Florence and Venice

        <!-- Left and right controls -->
        a(class="left carousel-control" href="#ticketsCarousel" role="button" data-slide="prev")
          span(class="glyphicon glyphicon-chevron-left" aria-hidden="true")
          span(class="sr-only") Previous

        a(class="right carousel-control" href="#ticketsCarousel" role="button" data-slide="next")
          span(class="glyphicon glyphicon-chevron-right" aria-hidden="true")
          span(class="sr-only") Next

      div(id="divMainContent" class="row content" style="margin-left:0; margin-right:0; display: block;")        
        div(id="divLeftFilter" class="col-sm-2 sidenav")
          p(class="left-ul-filter label-filter-border" )
            span(style="font-weight: bold; text-transform: uppercase;") Категория
          include ./partials/types_menu          
          div(id="divMultiDatePicker" class="text-left" style="margin-bottom:10px; display:none;")
          p(class="left-ul-filter label-filter-border")
            span(style="font-weight: bold;") ДАТА
          ul(class="row list-unstyled")
            li
              input(id="txtDateFrom" type="text" class="text-box text-left left-ul-filter" placeholder="Дата с:" style="margin-bottom: 5px; box-shadow: none;")              
            li(style="margin-bottom: 10px;")
              input(id="txtDateTo" type="text" class="text-box text-left left-ul-filter" placeholder="Дата по:")

            li(id="liLeftFilter_Today" class="text-left left-ul-filter border-bottom-grey" )
              input(id="inputLeftFilter_Today" type="checkbox" name="genre" value="action")
              label(for="inputLeftFilter_Today" class="label-left-filter-font") СЕГОДНЯ              

            li(id="liLeftFilter_Tomorrow" class="text-left left-ul-filter border-bottom-grey")
              input(id="inputLeftFilter_Tomorrow" type="checkbox" name="genre" value="action")
              label(for="inputLeftFilter_Tomorrow" class="label-left-filter-font") ЗАВТРА

            li(id="liLeftFilter_Week" class="text-left left-ul-filter border-bottom-grey")
              input(id="inputLeftFilter_Week" type="checkbox" name="genre" value="action")
              label(for="inputLeftFilter_Week" class="label-left-filter-font") БЛИЖАЙШАЯ НЕДЕЛЯ

            li(id="liLeftFilter_Weekend" class="text-left left-ul-filter border-bottom-grey")
              input(id="inputLeftFilter_Weekend" type="checkbox" name="genre" value="action")
              label(for="inputLeftFilter_Weekend" class="label-left-filter-font") БЛИЖАЙШИЕ ВЫХОДНЫЕ

            li(id="liLeftFilter_NextWeekend" class="text-left left-ul-filter border-bottom-grey")
              input(id="inputLeftFilter_NextWeekend" type="checkbox" name="genre" value="action")
              label(for="inputLeftFilter_NextWeekend" class="label-left-filter-font") СЛЕДУЮЩИЕ ВЫХОДНЫЕ

            li(id="liLeftFilter_Month" class="text-left left-ul-filter border-bottom-grey")
              input(id="inputLeftFilter_Month" type="checkbox" name="genre" value="action")
              label(for="inputLeftFilter_Month" class="label-left-filter-font") БЛИЖАЙШИЙ МЕСЯЦ
              
            li(id="liLeftFilter_TreeMonth" class="text-left left-ul-filter border-bottom-grey")
              input(id="inputLeftFilter_TreeMonth" type="checkbox" name="genre" value="action")
              label(for="inputLeftFilter_TreeMonth" class="label-left-filter-font") БЛИЖАЙШИЕ 3 МЕСЯЦА

          p(class="left-ul-filter label-filter-border" ) 
            span(style="font-weight: bold; text-transform: uppercase;") Место
            include ./partials/cities_filter

          p(class="left-ul-filter label-filter-border" ) 
            span(style="font-weight: bold; text-transform: uppercase;") Другое 
          ul(class="row list-unstyled")
            li(id="liSuperPrice" class="text-left left-ul-filter border-bottom-grey")              
              input(id="inputSuperPrice" type="checkbox" name="genre" value="action")
              label(for="inputSuperPrice" class="label-left-filter-font") Супер-цена            

            li(id="liDiscount" class="text-left left-ul-filter border-bottom-grey")
              input(id="inputDiscount" type="checkbox" name="genre" value="action")
              label(for="inputDiscount" class="label-left-filter-font") Со скидкой

            li(id="liTour" class="text-left left-ul-filter border-bottom-grey")
              input(id="inputTour" type="checkbox" name="genre" value="action")
              label(for="inputTour" class="label-left-filter-font") Гастроли          

            li(id="liMinMaxPrice" class="text-left left-ul-filter border-bottom-grey")
              p
                label(for="amount") ЦЕНА:
                input(type="text" id="amount" readonly)
              div(id="slider-range")           

          div(id="divClearLeftFilter" class="text-left")
            a(id="aClearLeftFilter" href="#" style="margin-left: -10px; text-decoration-color: red;" )
              span(class="glyphicon glyphicon-remove-circle" style="margin-right:3px; color:red;") 
              span(style="color:red;") ОЧИСТИТЬ

          div(id="divPanelSubscriber" class="panel panel-default row")
            div(class="panel-heading") РАССЫЛКА
            div(class="panel-body")              
              div(id="divAlertSubscriberSuccess" class="alert alert-success" style="display:none;")
                span(id="spanSubscriberAlertSuccess") 
              
              div(id="divAlertSubscriberError" class="alert alert-danger" style="display:none;")
                span(id="spanSubscriberAlertError") 
              
              div(class="col-lg-12")
                p(id="pPanelSubscriberText") Каждую неделю мы рассказываем о лучших спектаклях и концертах. Коротко и ясно.
                input.form-control(id="inpSubscriptionEmail" type='email' name="email" required="" placeholder="email")                 
                button.btn.btn-default(type='button' onclick="addNewsletterSubscription();") Подписаться
                div
                  a(href="javascript:removeNewsletterSubscription();" class="a-link-general")
                    span Отписаться

        div(id="divModal" class="wait-modal-none")
        div(class="col-sm-10 text-center")   
          div(id="divLoading" class="wait-modal-none")
            img(src="/images/wait.gif" style="margin-top: 25%;")
            br 
            span(style="text-transform: uppercase; margin-top: 10px;") загрузка...
            
          div(id="divShowsMain" style="display:block")
            div(id="divTopFilterSmallSize" class="row top-filter-search-small-div")
              div( class="col-md-8 col-sm-12")
                input(id="txtSearchSmall" type="text" class="form-control" placeholder="поиск события")
            div(id="divTopFilter" class="row top-filter-div")
              div( class="col-md-4 col-sm-4 top-filter-search-div")
                input(id="txtSearch" type="text" class="form-control" placeholder="поиск события" style="width: 100%;")
              div( class="col-md-8 col-sm-12" style="text-align: left; padding-left: 0;")
                div(class="btn-group top-sort-buttons")
                  button(id="btnSortByPrice" type="button" class="btn btn-default")
                    span(id="spanSortByPriceAlt_desc" class="glyphicon glyphicon-sort-by-attributes-alt")
                    span(id="spanSortByPrice_asc" class="glyphicon glyphicon-sort-by-attributes" style="display:none;")
                    span(style="margin-left:3px;") Цена

                  button(id="btnSortByName" type="button" class="btn btn-default")
                    span(id="spanSortByName_asc" class="glyphicon glyphicon-sort-by-alphabet")
                    span(id="spanSortByNameAlt_desc" class="glyphicon glyphicon-sort-by-alphabet-alt" style="display:none;")
                    span(style="margin-left:3px;") Название
                  
                  button(id="btnSortBySection" type="button" class="btn btn-default")
                    span(id="spanSortBySection_asc" class="glyphicon glyphicon-sort-by-alphabet")
                    span(id="spanSortBySectionAlt_desc" class="glyphicon glyphicon-sort-by-alphabet-alt" style="display:none;")                
                    span(style="margin-left:3px;") Категория

                  button(id="btnSortByDate" type="button" class="btn btn-default")
                    span(id="spanSortByDate_asc" class="glyphicon glyphicon-sort-by-attributes")
                    span(id="spanSortByDateAlt_desc" class="glyphicon glyphicon-sort-by-attributes-alt" style="display:none;")                
                    span(style="margin-left:3px;")  Дата
                  
                  button(id="btnClearTopFilter" type="button" class="btn btn-default")
                    span(style="margin-right:3px;" class="glyphicon glyphicon-remove-circle")
                    span Очистить
            
            include ./partials/shows_main

