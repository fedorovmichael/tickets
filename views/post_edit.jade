extends layout
block content
  div(class="container text-center")
    div(class="panel panel-default" style="margin-top:30px;")
      div(class="panel-heading text-left")
        -var post_date = dateFormat(new Date(post[0].pub_date), "dd.mm.yyyy");
        span(class="panel-title") #{post_date}
        a(id="" href="/posts" class="edit-show-close-a" style="text-transform: uppercase; float: right; margin-top: -4px;")
          span(class="glyphicon glyphicon-remove-circle")
      div(class="panel-body" style="text-align:center;")
        h1 #{post[0].name}
        div(id="divPostBody" style="text-align: left; margin-bottom:5px;")          
          span(id="spnPostText" style="") !{post[0].text}
          div(class="row" style="height: 40px;")
          div(class="col-md-8")          
            div(id="divSocialShare" class="ya-share2" data-services="lj,vkontakte,facebook,odnoklassniki,moimir,gplus,twitter" style="float:left;")

    div(class="panel panel-default" style="margin-top:-5px; margin-bottom: 150px;")
      div(class="panel-heading text-center")        
        span(class="panel-title") ФОТО - ВИДЕО
      div(class="panel-body" style="text-align:center;")
        
        div(id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls")
          div(class="slides")
          h3(class="title")
          a(class="prev") ‹
          a(class="next") ›
          a(class="close") ×
          a(class="play-pause")
          ol(class="indicator")

        div(id="links")
          if(media)            
            each image in media
              a(href="#{image.link}" title="#{image.name}" )
                img(src="#{image.link}" alt="#{image.name}")

  
  script.
    document.getElementById('links').onclick = function (event) {
      event = event || window.event;
      var target = event.target || event.srcElement,
          link = target.src ? target.parentNode : target,
          options = {index: link, event: event},
          links = this.getElementsByTagName('a');
      blueimp.Gallery(links, options);
    };
